---
import ProductChainTable from "../components/QuickLinks/sections/ProductChainTable"
import QuickLinksHero from "../components/QuickLinks/sections/QuickLinksHero"
import QuickLinksLayout from "../layouts/QuickLinksLayout.astro"
---

<QuickLinksLayout
  title="Builder's Quick Links"
  description="Find all the supported networks at a glance and network-specific information you need to build your project."
  image="/images/hero-background.svg"
>
  <QuickLinksHero />
  <ProductChainTable />
</QuickLinksLayout>

<style>
  .home-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--space-12x);
  }

  body {
    background-color: #f5f7fd;
    z-index: 10;
  }
  body:after {
    background-image: url("/images/homepage-shape.svg");
    background-repeat: no-repeat;
    position: absolute;
    width: calc(100% + 275px);
    height: 100%;
    content: " ";
    z-index: -1;
    min-height: 1706px;
    top: -850;
  }
</style>
