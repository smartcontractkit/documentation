---
import CcipLayout from "~/layouts/CcipLayout.astro"
import { getEntry } from "astro:content"
import { Environment, getAllNetworks, getAllSupportedTokens, Version } from "~/config/data/ccip"
import NetworkCard from "~/components/CCIP/Cards/NetworkCard"
import TokenCard from "~/components/CCIP/Cards/TokenCard"
import ChainHero from "~/components/CCIP/ChainHero/ChainHero"
import Table from "~/components/CCIP/Tables/ChainTable"

export async function getStaticPaths() {
  const entry = await getEntry("ccip", "index")
  const { headings } = await entry.render()
  const networks = getAllNetworks({ filter: "mainnet" })
  const supportedTokens = getAllSupportedTokens({
    environment: Environment.Mainnet,
    version: Version.V1_2_0,
  })

  const tokens = Object.keys(supportedTokens).sort((a, b) => a.localeCompare(b, undefined, { sensitivity: "base" }))
  const pages = tokens.map((token) => ({ token }))

  return pages.map(({ token }) => {
    return {
      params: { token },
      props: {
        // network: networks.find((network) => network.chain === chain),
      },
    }
  })
}

const entry = await getEntry("ccip", "index")
const { headings } = await entry.render()
const networks = getAllNetworks({ filter: "mainnet" })
const supportedTokens = getAllSupportedTokens({
  environment: Environment.Mainnet,
  version: Version.V1_2_0,
})

const tokens = Object.keys(supportedTokens).sort((a, b) => a.localeCompare(b, undefined, { sensitivity: "base" }))

const allTokens = tokens.map((token) => {
  return {
    name: token,
    logo: "/assets/chains/avalanche.svg",
    totalNetworks: 0,
  }
})

// const { network } = Astro.props
---

<CcipLayout frontmatter={entry.data} {headings}>
  <ChainHero chains={networks} tokens={allTokens} client:load network={networks[0]} />
  <section class="layout">
    <div>
      <h2>Listed Networks <span>({networks.length})</span></h2>

      <Table
        columns={[
          {
            name: "Destination network",
            key: "name",
          },
          {
            name: "OnRamp address",
            key: "onRamp",
          },
          {
            name: "Status",
            key: "status",
          },
        ]}
        data={networks.map((chain) => ({
          name: chain.name,
          onRamp: "0x1234567890",
          status: "Active",
        }))}
      />
    </div>
  </section>
</CcipLayout>

<style scoped="false">
  .layout {
    --gutter: var(--space-6x);
    --doc-padding: 2rem;
    /* margin-bottom: 0; */
    margin: var(--space-8x) auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--gutter);
    padding: var(--doc-padding);
  }

  .layout h2 {
    color: var(--gray-900);
    font-size: 22px;
  }

  .layout h2 span {
    color: var(--gray-400);
    font-weight: 600;
    letter-spacing: 0.5px;
  }

  .networks__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-8x);
  }

  .tokens__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-8x);
  }

  @media (min-width: 50em) {
    .layout {
      max-width: 1440px;
    }
  }

  @media (min-width: 992px) {
    .layout {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-24x);
    }

    .networks__grid {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-6x);
    }

    .tokens__grid {
      grid-template-columns: 1fr 1fr 1fr;
      gap: var(--space-6x);
    }
  }
</style>
