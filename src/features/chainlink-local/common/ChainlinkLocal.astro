---
const LocalSimulatorFork = await Astro.glob("./local-simulator-fork.mdx")
const LocalSimulatorForkComponent = LocalSimulatorFork[0].Content
const LocalSimulatorForkHardhat = await Astro.glob("./local-simulator-fork-hardhat.mdx")
const LocalSimulatorForkHardhatComponent = LocalSimulatorForkHardhat[0].Content
const LocalSimulatorForkFoundry = await Astro.glob("./local-simulator-fork-foundry.mdx")
const LocalSimulatorForkFoundryComponent = LocalSimulatorForkFoundry[0].Content

export type Props = {
  section?: "local-simulator-fork-hardhat" | "local-simulator-fork-foundry"
}
const { section } = Astro.props as Props
---

{section === "local-simulator-fork-hardhat" && <LocalSimulatorForkHardhatComponent />}
{section === "local-simulator-fork-foundry" && <GLocalSimulatorForkFoundryComponent />}
